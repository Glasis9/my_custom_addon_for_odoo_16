<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="photo"/>
                <field name="gender"/>
                <field name="speciality"/>
                <field name="intern"/>
                <field name="mentor"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form duplicate="false" import="false">
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="photo"/>
                        <field name="gender"/>
                        <field name="speciality"/>
                        <field name="intern"/>
                        <field name="mentor"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hospital_disease_report_wizard_act_window" model="ir.actions.report">
        <field name="name">Disease report</field>
        <field name="res_model">hospital.disease.report.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hospital_doctor_view_tree"/>
        <field name="binding_view_types">form</field>
        <field name="binding_type">report</field>
    </record>

    <menuitem id="hospital_doctor_menu"
              action="hospital_doctor_act_window"
              parent="hospital_catalog_menu"
              name="Doctor" sequence="201"/>

</odoo>
