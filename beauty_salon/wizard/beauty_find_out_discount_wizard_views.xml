<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="find_out_discount_wizard_view_form" model="ir.ui.view">
        <field name="name">find.out.discount.wizard.view.form</field>
        <field name="model">find.out.discount.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="discount" readonly="1"/>
                    <field name="text"/>
                    <field name="client_id" invisible="1"/>
                </group>
                <footer>
                    <button special="cancel" class="oe_link" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
